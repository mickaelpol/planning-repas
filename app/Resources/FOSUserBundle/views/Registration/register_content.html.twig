{% trans_default_domain 'FOSUserBundle' %}

<div class="row mt-60">
    <div class="col s12 m10 offset-m1 l8 offset-l2 xl8 offset-xl2">
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
            <div class="card">
                <div class="card-content white-text">
                    <span class="card-title center-align">{{ 'layout.register'|trans }}</span>
                    <div class="row">
                        {% if not form.vars.valid %}
                            <div class="col s12 l12 xl12 mt-5 mb-5">
                                {% for child in form.children %}
                                    {% for error in child.vars.errors %}
                                        <div class="red-text center-align">
                                            {{ error.message }}
                                        </div>
                                    {% endfor %}
                                {% endfor %}
                            </div>
                        {% endif %}
                        <div class="col s12 l12 xl4 offset-xl1">
                            <div class="input-field mt-40">
                                {{ form_label(form.username) }}
                                {{ form_widget(form.username) }}
                            </div>
                            <div class="input-field mt-40">
                                {{ form_label(form.email) }}
                                {{ form_widget(form.email) }}
                            </div>
                        </div>
                        <div class="col s12 l12 xl4 offset-xl2">
                            <div class="input-field mt-40">
                                {{ form_label(form.plainPassword.first) }}
                                {{ form_widget(form.plainPassword.first) }}
                            </div>
                            <div class="input-field mt-40">
                                {{ form_label(form.plainPassword.second) }}
                                {{ form_widget(form.plainPassword.second) }}
                            </div>
                            <div class="input-field mt-5 center">
                                <button id="show_password" type="button" class="btn btn-small deep-orange">
                                    {{ 'show.password'|trans({}, 'FOSUserBundle') }}
                                    <i class="large material-icons right">visibility</i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-action">
                    <div class="row">
                        <div class="col s12 l12">
                            <button class="btn btn-inscription btn-large deep-orange" type="submit" id="_submit" name="_submit">
                                <i class="large material-icons right">check</i>
                                {{ 'layout.register'|trans({}, 'FOSUserBundle') }}
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</div>