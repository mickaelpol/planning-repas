<div class="row">
    <div class="col l6 offset-l3">
        {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
            <div class="card">
                <div class="card-content white-text">
                    <span class="card-title center-align">{{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}</span>
                    <div class="input-field mt-40">
                        {{ form_label(form.current_password, 'form.current_password'|trans({}, 'FOSUserBundle' )) }}
                        {{ form_widget(form.current_password) }}
                    </div>
                    <div class="input-field mt-40">
                        {{ form_label(form.plainPassword.first, 'form.new_password'|trans({}, 'FOSUserBundle' )) }}
                        {{ form_widget(form.plainPassword.first) }}
                    </div>
                    <div class="input-field mt-40">
                        {{ form_label(form.plainPassword.second, 'form.new_password_confirmation'|trans({}, 'FOSUserBundle' )) }}
                        {{ form_widget(form.plainPassword.second) }}
                    </div>
                </div>
                <div class="card-action">
                    <div class="row">
                        <div class="col l12">
                            <button class="btn btn-large hoverable deep-orange" type="submit">
                                <i class="material-icons left">check</i>
                                {{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</div>
