        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        <link rel="stylesheet" href="{{ asset('css/margin.css') }}">
    {% endblock %}
    <div class="container">
        <h1 class="center-align mt-60">
            Oops !
            <strong>
                {{ status_code }}
            </strong>
            {{ status_text }}
        </h1>
