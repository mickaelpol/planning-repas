{% extends 'base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}
    {{ 'recette.new'|trans }}
{% endblock %}

{% block body %}

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/recette.css') }}">
    {% endblock %}

    <div class="row mt-60">
        <div class="col s12 m10 offset-m1 l12 xl12">
            {{ form_start(form) }}
            <button id="btnOpen" class="btn" type="button">
                ajouter une image
            </button>
            {{ form_widget(form.imageFile) }}
            <div class="card">
                <div class="card-content white-text">
                    <div class="card-title center-align">{{ 'recette.creation'|trans }}</div>
                    <div class="divider mt-30 mb-30"></div>
                    <div class="row">
                        <div class="col s12 m10 l6 offset-l4 mb-30 mt-30">
                            <div class="input-field col s10 offset-s1 m8 offset-m3 l10">
                                {{ form_widget(form.nom, {'attr': {'class': 'white-text'}}) }}
                                {{ form_label(form.nom) }}
                            </div>
                        </div>
                        <div class="col s12 m6 l4">
                            <div class="input-field">
                                <h5>{{ 'recette.ingredient'|trans }}</h5>
                                <ul class="tags collection" data-prototype="{{ form_widget(form.compositions.vars.prototype)|e('html_attr') }}">
                                    {% for ing in form.compositions %}
                                        <li class="collection-item">
                                            {{ form_widget(ing.quantite) }}
                                        </li>
                                        <li class="collection-item">
                                            {{ form_row(ing.ingredient) }}
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                        <div class="col s12 offset-m1 m5 l7 offset-l1">
                            <div class="input-field">
                                <h5>{{ 'recette.etape'|trans }}</h5>
                                <ul class="etapes" data-prototype="{{ form_widget(form.etapes.vars.prototype)|e('html_attr') }}">
                                    {% for eta in form.etapes %}
                                        <div class="row">
                                            <li>{{ form_label(eta.description) }}</li>
                                            <li>{{ form_widget(eta.description) }}</li>
                                        </div>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-action">
                    <div class="row">
                        <div class="col s12 m12 l12 xl12">
                            <button class="btn btn-large deep-orange hoverable" type="submit" id="_submit" name="_submit">
                                <i class="large material-icons right">check</i>
                                {{ 'create'|trans }}
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script async type="text/javascript" src="{{ asset('js/addIngredient.js') }}"></script>
{% endblock %}