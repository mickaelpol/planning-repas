{% extends 'base.html.twig' %}

{% block body %}
    <h1>Composition</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ composition.id }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ composition.quantite }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('composition_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('composition_edit', { 'id': composition.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
